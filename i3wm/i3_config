# Gerenciado via Ansible

# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $Alt Mod1
set $Win Mod4
# set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans 8

# Use Mouse+$Win to drag floating windows to their wanted position
floating_modifier $Alt

# start a terminal
bindsym $Win+Return exec i3-sensible-terminal

# kill focused window
bindsym $Win+Shift+q kill

# dmenu
bindsym $Win+d exec dmenu_run

# i3-dmenu-desktop - only displays applications shipping a .desktop file
# bindsym $Alt+F1 exec --no-startup-id i3-dmenu-desktop

# borders
hide_edge_borders smart

# change focus
bindsym $Win+j focus left
bindsym $Win+k focus down
bindsym $Win+l focus up
bindsym $Win+ccedilla focus right

# alternatively, you can use the cursor keys:
bindsym $Win+Left focus left
bindsym $Win+Down focus down
bindsym $Win+Up focus up
bindsym $Win+Right focus right

# move focused window
bindsym $Win+Shift+j move left
bindsym $Win+Shift+k move down
bindsym $Win+Shift+l move up
bindsym $Win+Shift+ccedilla move right

# alternatively, you can use the cursor keys:
bindsym $Win+Shift+Left move left
bindsym $Win+Shift+Down move down
bindsym $Win+Shift+Up move up
bindsym $Win+Shift+Right move right

# split in horizontal orientation
bindsym $Win+h split h

# split in vertical orientation
bindsym $Win+v split v

# enter fullscreen mode for the focused container
bindsym $Win+f fullscreen toggle

# default container layout (on workspace level)
workspace_layout stacking

# change container layout (stacked, tabbed, toggle split)
bindsym $Win+s layout stacking
bindsym $Win+w layout tabbed
bindsym $Win+q layout toggle split

# toggle tiling / floating
bindsym $Win+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $Win+space focus mode_toggle

# focus the parent container
bindsym $Win+a focus parent

# focus the child container
# bindsym $Win+d focus child

# automatic back-and-forth
workspace_auto_back_and_forth yes

# switch to next/previous workspace
bindsym $Win+$Alt+Right workspace next
bindsym $Win+$Alt+Left  workspace prev

# Workspace names
set $WS1 "1: term"
set $WS2 "2: browser"
set $WS3 "3: slack"
set $WS4 "4: media"
set $WS5 "5: more..."

# switch to workspace (see next block)
bindsym $Win+1 workspace $WS1
bindsym $Win+2 workspace $WS2
bindsym $Win+3 workspace $WS3
bindsym $Win+4 workspace $WS4
bindsym $Win+5 workspace $WS5
bindsym $Win+6 workspace 6
bindsym $Win+7 workspace 7
bindsym $Win+8 workspace 8
bindsym $Win+9 workspace 9
bindsym $Win+0 workspace 10

# move focused container to workspace (see previous block)
bindsym $Win+Shift+1 move container to workspace $WS1
bindsym $Win+Shift+2 move container to workspace $WS2
bindsym $Win+Shift+3 move container to workspace $WS3
bindsym $Win+Shift+4 move container to workspace $WS4
bindsym $Win+Shift+5 move container to workspace $WS5
bindsym $Win+Shift+6 move container to workspace 6
bindsym $Win+Shift+7 move container to workspace 7
bindsym $Win+Shift+8 move container to workspace 8
bindsym $Win+Shift+9 move container to workspace 9
bindsym $Win+Shift+0 move container to workspace 10

# assign apps to workspaces
# run "xprop", click in a window and search for e.g. 'WM_CLASS(STRING) = "Navigator", "Firefox"'
# assign [class="Xfce4-terminal"] $WS1
assign [class="Firefox"]        $WS2
assign [class="Google-chrome"]  $WS2
assign [class="Slack"]          $WS3
# assign [class="Mattermost"]     $WS3
# assign [class="Thunderbird"]    $WS3
# assign [class="Remmina"]        $WS4
# assign [class="VirtualBox"]     $WS4

# https://www.reddit.com/r/i3wm/comments/5oxosf/assigning_spotify_to_a_workspace/dcnwxcg/
for_window [class="Spotify"] move to workspace $WS4

# move workspaces
bindsym Control+$Alt+Left  move workspace to output left
bindsym Control+$Alt+Right move workspace to output right

# monitores
# bindsym $Win+Shift+p exec xrandr --output VGA1 --off
# bindsym $Win+p       exec xrandr --output VGA1 --auto --right-of LVDS1
bindsym $Win+p exec --no-startup-id "test -x ~/bin/display-config.sh && ~/bin/display-config.sh"

# reload the configuration file
bindsym $Win+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $Win+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $Win+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym ccedilla resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $Win+t mode "resize"

# Lock screen
bindsym Control+$Alt+L exec --no-startup-id i3lock --color=01173a

# Hotkeys
# Ref: https://faq.i3wm.org/question/3747/enabling-multimedia-keys.1.html

# Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# Audio controls (alternative, no multimedia keys)
bindsym Control+$Win+Up   exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym Control+$Win+Down exec --no-startup-id pactl set-sink-volume 0 -5%

# Spotify controls
bindsym XF86AudioPlay  exec --no-startup-id spotify-ctl.sh PlayPause
bindsym XF86AudioPause exec --no-startup-id spotify-ctl.sh PlayPause
bindsym XF86AudioNext  exec --no-startup-id spotify-ctl.sh Next
bindsym XF86AudioPrev  exec --no-startup-id spotify-ctl.sh Previous

# Spotify controls (alternative, no multimedia keys)
bindsym Control+$Win+Insert exec --no-startup-id spotify-ctl.sh PlayPause
bindsym Control+$Win+Right  exec --no-startup-id spotify-ctl.sh Next
bindsym Control+$Win+Left   exec --no-startup-id spotify-ctl.sh Previous

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20

# Apps
bindsym $Win+r exec spotify-ctl.sh Start

# PrintScreen
bindsym --release Print       exec flameshot gui

# Apps on startup
exec_always --no-startup-id nm-applet
# exec_always --no-startup-id xfce4-power-manager

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3status
    font pango:DejaVu Sans 8
}

